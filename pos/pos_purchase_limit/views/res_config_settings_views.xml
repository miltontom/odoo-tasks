<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_form_view"  model="ir.ui.view">
        <field name="name">pos.config.view.purchase.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="customer_purchase_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="customer_purchase_limit" class="o_form_label"/>
                        <div class="text-muted">
                            Set a purchase limit for a customer.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>