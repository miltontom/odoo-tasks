<templates xml:space="preserve">
    <t t-name="vehicle_repair.top_repairs_data">

        <section class="top-repairs">
            <style>
                .carousel-control-next, .carousel-control-prev {
                    width: 0rem;
                }
            </style>
            <h3 class="mt-3">Top Vehicle Repairs</h3>
            <div id="repair-carousel" class="container carousel slide" data-bs-ride="carousel" t-att-data-bs-interval="interval">
                <div class="carousel-inner row w-100 mx-auto" role="listbox">
                    <t t-foreach="chunks" t-as="chunk" t-key="chunk">
                        <div t-att-class="chunk.is_active ? 'carousel-item active' : 'carousel-item'">
                            <div class="row">
                                <t t-foreach="chunk" t-as="item" t-key="item">
                                    <div class="block span3 col-3 mt-3">
                                        <a t-attf-href="/vehicle_repair/top_repairs/view_card/web/{{item.id}}" style="text-decoration: none;" title="View more info">
                                            <div class="card" style="height: 350px;">
                                                <t t-if="item.image">
                                                    <img t-att-src="'data:image/png;base64,'+ item.image" class="card-img-top" alt="..." style="height: 180px; object-fit: contain;"/>
                                                </t>
                                                    <t t-else="">
                                                    <img src="website/static/src/img/snippets_thumbs/s_image.svg" class="card-img-top" style="height: 180px; object-fit: contain;" alt="..."/>
                                                </t>
                                                    <div class="card-body">
                                                        <h5 class="card-title text-primary fw-bold">
                                                            <t t-out="item.repair_order"/>
                                                        </h5>
                                                        <p class="card-text">
                                                            <t t-out="item.customer"/>
                                                        </p>
                                                        <a t-attf-href="/vehicle_repair/top_repairs/view_card/{{item.id}}" class="btn btn-primary" title="View backend form">
                                                            Go to backend
                                                        </a>
                                                    </div>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
                <a t-attf-href="#repair-carousel" class="carousel-control-prev" style="" data-bs-slide="prev" role="button" aria-label="Previous" title="Previous">
                    <span class="fa fa-chevron-circle-left fa-2x" style="color: black"/>
                        <span class="visually-hidden">Previous</span>
                </a>
                    <a t-attf-href="#repair-carousel" class="carousel-control-next" data-bs-slide="next" role="button" aria-label="Next" title="Next">
                    <span class="fa fa-chevron-circle-right fa-2x" style="color: black"/>
                        <span class="visually-hidden">Next</span>
                </a>
            </div>
        </section>
    </t>
</templates>

