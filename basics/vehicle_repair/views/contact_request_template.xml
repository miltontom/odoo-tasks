<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="contact_request_page">
        <t t-call="website.layout">
            <div class="container">
                <h3 class="mt-4 mb-4 d-flex justify-content-center">Contact Creation Request</h3>
                <div class="container">
                    <form action="/contact/request/submit" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="row row-gap-4">
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;"
                                           for="name">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="name" type="text" class="form-control s_website_form_input" name="name" required="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold" style="width: 200px;"
                                           for="email">
                                        Email
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="email" type="email" class="form-control s_website_form_input" name="email" required="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <button name="submit" type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>