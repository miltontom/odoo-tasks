<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="vehicle_repair_website_page">
        <t t-call="website.layout">
            <div class="container">
                <h3 class="mt-4 mb-4 d-flex justify-content-center">Repair Request</h3>
                <div class="container">
                    <form action="/vehicle_repair/request/submit"
                          method="POST">
                        <input type="hidden" name="csrf_token"
                               t-att-value="request.csrf_token()" />
                        <div class="row row-gap-4">
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="customer">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="customer" id="customer"
                                                class="col-sm form-control">
                                            <t t-foreach="customer" t-as="cust">
                                                <option>
                                                    <t t-out="cust.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;"
                                           for="model_category">
                                        Vehicle Model Category
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="model_category"
                                                id="model_category"
                                                class="col-sm form-control">
                                            <t t-foreach="model_categ" t-as="cat">
                                                <option>
                                                    <t t-out="cat.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;"
                                           for="vehicle_model">
                                        Vehicle Model
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="model" id="vehicle_model"
                                                class="col-sm form-control">
                                            <t t-foreach="model" t-as="mod">
                                                <option>
                                                    <t t-out="mod.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <button name="submit" type="submit"
                                        class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>