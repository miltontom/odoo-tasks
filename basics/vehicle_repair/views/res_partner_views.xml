<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_smart_button">
            <field name="name">res.partner.smartbutton</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='warning_tax']" position="before">
                    <div class="o_form_statusbar d-flex justify-content-between py-2">
                        <button name="action_create_repair_request" string="Repair Request" class="btn-primary"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="non_service,service"/>
                    </div>
                </xpath>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_repairs"
                            icon="fa-history">
                        <field string="Repairs" name="repairs_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>