    <template id="content_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector="#snippet_selector" data-js="ContentSnippet">
                <we-row string="Item">
                    <we-button data-add-item="true" data-no-preview="true"
                               class="add_content_item o_we_bg_brand_primary">Add Item
                    </we-button>
                </we-row>
            </div>
        </xpath>
    </template>
