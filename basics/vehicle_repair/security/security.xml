<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="module_category_vehicle_repair" model="ir.module.category">
        <field name="name">Vehicle Repair</field>
        <field name="description">Manage vehicle repairs</field>
    </record>

    <record id="group_vehicle_repair_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_vehicle_repair"/>
    </record>

    <record id="group_vehicle_repair_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="module_category_vehicle_repair"/>
    </record>

    <record id="vehicle_repair_manager_rule" model="ir.rule">
        <field name="name">Manager has access to everything</field>
        <field name="model_id" ref="model_vehicle_repair"/>
        <field name="groups" eval="[(4, ref('vehicle_repair.group_vehicle_repair_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="vehicle_repair_technician_rule" model="ir.rule">
        <field name="name">User can only see their own records</field>
        <field name="model_id" ref="model_vehicle_repair"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('vehicle_repair.group_vehicle_repair_technician'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="vehicle_repair_company_rule" model="ir.rule">
        <field name="name">Vehicle Repair Order multi-company</field>
        <field name="model_id" ref="model_vehicle_repair"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>