<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="ready_for_delivery_template" model="mail.template">
            <field name="name">READY FOR DELIVERY</field>
            <field name="model_id" ref="model_vehicle_repair"/>
            <field name="subject">{{ object.company_id.name }}</field>
            <field name="email_from">{{ (object.user_id.email) }}</field>
            <field name="partner_to">{{ object.name_id.id }}</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Hello <span t-field="object.name_id.name"/>,
                        <br/>
                        <br/>
                        We have repaired your vehicle and is ready to be delivered!
                        <br/>
                        <br/>
                        <b>RO: </b> <span t-field="object.name"/>
                        <br/>
                        <b>Estimated Cost: </b><span t-field="object.estimated_amount"/>
                        <br/>
                        <br/><span t-field="object.user_id.name"/>
                        <br/>
                        <br/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>