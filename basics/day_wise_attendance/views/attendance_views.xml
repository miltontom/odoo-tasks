<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">attendance</field>
        <field name="view_mode">list</field>
        <field name="context">{'search_default_date': True}</field>
    </record>

    <record id="attendance_list_view" model="ir.ui.view">
        <field name="name">attendance.list</field>
        <field name="model">attendance</field>
        <field name="arch" type="xml">
            <list expand="1">
                <field name="employee_id"/>
            </list>
        </field>
    </record>

    <record id="attendance_search_view" model="ir.ui.view">
        <field name="model">attendance</field>
        <field name="arch" type="xml">
            <search>
                <filter name="date" context="{'group_by': 'date:day'}"/>
            </search>
        </field>
    </record>
</odoo>