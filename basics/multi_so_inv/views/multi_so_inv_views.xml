<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="multi_so_inv_action" model="ir.actions.act_window">
        <field name="name">Multiple SO Invoice</field>
        <field name="res_model">multi.so.inv</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="multi_so_inv_list" model="ir.ui.view">
        <field name="name">multi.so.inv.list</field>
        <field name="model">multi.so.inv</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
            </list>
        </field>
    </record>

    <record id="multi_so_inv_form" model="ir.ui.view">
        <field name="name">multi.so.inv.form</field>
        <field name="model">multi.so.inv</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="sale_order_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids"/>
                            <field name="currency_id" invisible="1"/>
                            <group>
                                <div class="o_group row align-items-start mt-2 mt-md-0">
                                    <div class="o_inner_group oe_subtotal_footer d-flex order-0 order-lg-1 flex-column">
                                        <separator string="Total Amount"/>
                                        <field name="total_amount" widget="monetary"
                                               style="font-size: 20px; font-weight: bold"/>
                                    </div>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>