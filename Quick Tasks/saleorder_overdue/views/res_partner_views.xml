<odoo>
    <data>
        <record model="ir.ui.view" id="last_sales_date">
            <field name="name">res.partner.last.sales.date</field>
            <field name="model">res.partner</field>
            <field name="inherit_id"
                   ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']"
                       position="after">
                    <field name="last_sales_date" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>