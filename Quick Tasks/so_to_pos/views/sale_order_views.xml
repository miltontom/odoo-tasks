<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherit.so_to_pos</field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_pay_at_counter"
                        string="Pay at counter" type="object"
                        invisible="state != 'sale'" />
                <!-- invisible="(state != 'sale' and state != 'paid_at_counter') or state == 'paid_at_counter'" /> -->
            </xpath>

            <xpath expr="//field[@name='state']"
                   position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,sent,sale,paid_at_counter" />
            </xpath>

            <xpath expr="//page[@name='other_information']//group[@name='sales_person']"
                   position="inside">
                <field name="pos_session_id" />
            </xpath>
        </field>
    </record>
</odoo>