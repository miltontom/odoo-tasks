<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="related_invoice_line_action"
            model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">related.invoice.line</field>
        <field name="view_mode">list</field>
    </record>

    <record id="requisition_request_line_view_list"
            model="ir.ui.view">
        <field name="name">related.invoice.line.view.list</field>
        <field name="model">related.invoice.line</field>
        <field name="arch" type="xml">
            <list limit='20'>
                <field name="product_id" />
                <field name="quantity" />
                <field name="price" />
                <field name="price_subtotal" string="Amount" />
                <button title='Add to invoice lines'
                        name='action_add_to_invoice_lines'
                        type='object' string="Add" />
            </list>
        </field>
    </record>
</odoo>