<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form.inherit.associated_products</field>
        <field name="model">account.move</field>
        <field name="inherit_id"
               ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']"
                   position="after">
                <page string="Related Invoice Lines">
                    <button string="Add All" type="object"
                            class="btn-secondary"
                            name="action_add_all"
                            invisible="related_invoices_count == 0" />
                    <field name="related_invoice_ids" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>