<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.tax_included_price</field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']"
                   position="after">
                <field name="price" />
                <field name="tax_ids" widget="many2many_tags" />
                <div class="o_row">
                    <button name="action_calculate_tax_inc_price"
                            type="object" string="Calculate"
                            class="oe_link oe_inline" />
                    <field name="tax_inc_price" class="oe_inline" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>