<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="make_pos_order_view_form"
            model="ir.ui.view">
        <field name="name">make.pos.order.view.form</field>
        <field name="model">make.pos.order.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="total_amount" />
                    <field name="remaining_amount" />
                    <field name="payment_line_ids" nolabel="1" />
                </group>
                <footer>
                    <button name="action_confirm_payment"
                            string="Confirm Payment" type="object"
                            class="btn-primary" />
                    <button name="cancel" string="cancel"
                            special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>