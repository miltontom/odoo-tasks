<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="product_to_cart_page"
              name="Product Page">
        <t t-call="website.layout">
            <div class="container product_form">
                <h3 class="mt-4 mb-4 d-flex justify-content-center">Add product to cart</h3>
                <div class="container">
                    <form method="POST" action="/add_to_cart">
                        <input type="hidden" name="csrf_token"
                               t-att-value="request.csrf_token()" />
                        <div class="row row-gap-4">
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="product">
                                        Product
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <select name="product" id="product"
                                                class="col-sm form-control">
                                            <t t-foreach="products" t-as="prod">
                                                <option t-att-value="prod.id">
                                                    <t t-out="prod.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="quantity">
                                        Quantity
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="quantity" type="number"
                                               class="form-control s_website_form_input"
                                               name="quantity" required="1" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <button name="submit" id="add_to_cart"
                                        type="submit" class="btn btn-primary">Add to cart</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

</odoo>
