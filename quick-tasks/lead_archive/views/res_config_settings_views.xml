<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_config_form_view"
            model="ir.ui.view">
        <field name="name">crm.config.form.view.inherit.associated_products</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="crm.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='crm_lead']"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                        <label for="threshold" class="o_form_label" />
                        <div class="text-muted">
                               Automatically archive a record if the time difference is greater than the threshold
                        </div>
                        <field name="threshold" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>