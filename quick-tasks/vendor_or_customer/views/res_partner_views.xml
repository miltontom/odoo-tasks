<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form"
            model="ir.ui.view">
        <field name="name">view.partner.form.inherit.vendor_or_customer</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='warning_tax']"
                   position="before">
                <div class="o_form_statusbar d-flex justify-content-between py-2">
                    <field name="state" widget="statusbar"
                           statusbar_visible="customer,vendor" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>