<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="new_product_page"
              name="Product Page">
        <t t-call="website.layout">
            <div class="container">
                <div class="container mt-5">
                    <form method="POST" action="/create_product" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token"
                               t-att-value="request.csrf_token()" />
                        <div class="row row-gap-4">
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="customer">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="name" type="text"
                                               class="form-control s_website_form_input"
                                               name="name" required="1" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;" for="customer">
                                        Price
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="price" type="number"
                                               class="form-control s_website_form_input"
                                               name="price" required="1" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <div class="row w-50">
                                    <label class="col-form-label col-sm-auto fw-semibold"
                                           style="width: 200px;"
                                           for="vehicle_model">
                                        Image
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm">
                                        <input id="file" type="file"
                                               class="form-control s_website_form_input"
                                               name="file"
                                               accept="image/*" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-12 d-flex justify-content-center">
                                <button name="submit" id="submit" type="submit"
                                        class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

</odoo>
