<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_form_view"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website_sale_product_qty</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='sale_product_catalog_settings']"
                   position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane">
                        <label for="location_id" class="o_form_label" />
                        <div class="text-muted">
                            Display available product quantity for a warehouse location
                        </div>
                        <div class="mt16">
                            <field name="location_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>