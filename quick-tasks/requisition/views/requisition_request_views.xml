<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="request_requisition_action"
            model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">requisition.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="request_requisition_view_list"
            model="ir.ui.view">
        
        <field name="name">request.requisition.view.list</field>
        <field name="model">requisition.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id" />
                <field name="state" widget="badge"
                       decoration-success="state == 'validate'"
                       decoration-warning="state == 'validate1'" />
            </list>
        </field>
    </record>

    <record id="request_requisition_view_form"
            model="ir.ui.view">
        
        <field name="name">request.requisition.view.form</field>
        <field name="model">requisition.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm"
                            type="object" class="oe_highlight"
                            invisible="state in ['validate1', 'validate', 'confirm', 'reject']" />
                    <button name="action_approve" string="Approve"
                            class="oe_highlight"
                            invisible="state != 'confirm'"
                            type="object"
                            groups="requisition.requisition_group_manager" />
                    <button name="action_validate" string="Validate"
                            type="object" class="oe_highlight"
                            invisible="state != 'validate1'"
                            groups="requisition.requisition_group_head" />
                    <button name="action_reject" string="Reject"
                            type="object"
                            invisible="not state in ['confirm','validate1', 'validate']"
                            groups="requisition.requisition_group_head,requisition.requisition_group_manager" />
                    <field name="state" widget="statusbar"
                           statusbar_visible="confirm,validate1,validate" />
                </header>
                <sheet>
                    <group>
                        <field name="employee_id"
                               style="max-width: 12rem" />
                        <field name="lines" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>