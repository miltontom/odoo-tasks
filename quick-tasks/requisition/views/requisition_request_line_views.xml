<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="requisition_request_line_action"
            model="ir.actions.act_window">
        <field name="name">Request Lines</field>
        <field name="res_model">requisition.request.line</field>
        <field name="view_mode">list</field>
    </record>

    <record id="requisition_request_line_view_list"
            model="ir.ui.view">
        <field name="name">requisition.request.line.view.list</field>
        <field name="model">requisition.request.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="product_id" required="1" />
                <field name="route" required="1" />
                <field name="vendor_ids"
                       widget="many2many_tags" />
                <field name="src_location_id"
                       string="Source Location" />
                <field name="dest_location_id"
                       string="Destination Location" />
            </list>
        </field>
    </record>
</odoo>